      "source.organizeImports": "explicit"
    }
  },
  "isort.args": ["--profile", "black"],
  "pylint.args": [
    "--disable=C0114",
    "--disable=C0115",
    "--disable=C0116",
    "--disable=C0411"
  ]
}
